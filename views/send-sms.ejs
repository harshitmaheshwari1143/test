<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="sendsms" appConnect="local" -->
<meta name="ac:route" content="/send-sms">

<dmx-serverconnect id="scUserType" url="api/Users/UserType"></dmx-serverconnect>
<header>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 id="CreditHeading" class="text-center align-self-center">SW Infotech Bulk SMS</h1>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="card">
        <div class="card-header sw-bg-col-primary">
            <b>Group SMS Send</b>
        </div>

        <div class="card-body">
            <form is="dmx-serverconnect-form" id="formGroupSMS" method="post" action="api/SMS/SendSMS" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-on:success="scNotif.success('Group SMS sent successfully'); formGroupSMS.reset();" dmx-on:error="scNotif.warning('An error occurred'); ">
                <div class="row">
                    <div class="col-12 col-lg-2 p-2">
                        <label>User Type</label>
                        <select id="UserTypeSelf" name="user_type" class="form-control col-12 px-2 form-select" dmx-bind:options="scUserType.data.GetUserType" optiontext="user_type" optionvalue="id" required="">
                            <option value="">Select</option>
                        </select>
                    </div>
                    <div class="col-12 col-lg-7 p-2">
                        <label>Message</label>
                        <textarea id="groupmessage" class="form-control col-12 px-2 " name="message" placeholder="Type here........" required=""></textarea>
                    </div>
                    <div class="col-4 p-0 ms-3">
                        <button id="btn1" class="btn btn-info mt-md-4" type="submit" dmx-bind:disabled="state.executing">Send<span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>

                    </div>
                </div>
            </form>
        </div>
        <div class="card-header sw-bg-col-primary mt-3">
            <b>Individual SMS Send</b>
        </div>
        <div class="card-body">
            <form is="dmx-serverconnect-form" id="formPersonalSMS" method="post" action="api/SMS/SendSMS" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-on:success="scNotif.success('Message sent successfully');formPersonalSMS.reset()" dmx-on:error="scNotif.warning('An error occurred'); ">

                <div class="row">
                    <div class="col-12 col-lg-3 p-2">
                        <label>Mobile Number</label>
                        <input type="number" id="sms_mobile" name="sms_mobile" class="form-control" placeholder="E.g: 9876543210" required="">
                    </div>
                    <div class="col-12 col-lg-2 p-2">
                        <label>Message</label>
                        <textarea id="personalmessage" class="form-control" name="message" placeholder="Type here........" required=""></textarea>
                    </div>
                    <div class="col-4 p-0 ms-3">
                        <button id="AdminCredit" class="btn btn-info mt-md-4" type="submit" dmx-bind:disabled="state.executing">Send<span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>

                    </div>
                </div>
            </form>

        </div>
    </div>

</div>